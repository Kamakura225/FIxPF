<h1 class="mb-4 text-center">人気ユーザーランキング</h1>

<table class="table table-striped table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">ランク</th>
      <th scope="col">ユーザー名</th>
      <th scope="col">獲得した良いね数</th>
    </tr>
  </thead>
  <tbody>
    <% @top_users.each_with_index do |user, index| %>
      <% next if user.guest_user? %> 
        <th scope="row"><%= index + 1 %></th>
        <td><%= user.nickname %></td>
        <td><%= user.total_good_likes %></td>
      </tr>
    <% end %>
  </tbody>
</table>