<div class="container mt-4">
  <h1><%= @place.name %></h1>

  <div class="row">
    <!-- 左カラム -->
    <div class="col-md-6">
      <% if user_signed_in? && !guest_user? %>
      <!-- コメント表示 -->
        <% @comments.each do |comment| %>
          <div class="comment mb-3 p-2 border rounded" style="background-color: #00c300; color: white;">
            <div class="d-flex justify-content-between align-items-start">
              <div>
                <strong><%= comment.user.nickname %></strong><br>
                <p><%= comment.content %></p>
                <%= l(comment.created_at, format: :short) %>
              </div>
              <div class="ms-3">
                <div class="rating" data-score="<%= comment.rating %>"></div>
              </div>
            </div>
          </div>
        <% end %>

        <!-- コメント＆評価フォーム -->
        <%= form_with(model: [:public, @place, @comment], local: true) do |f| %>
          <div class="form-group">
            <%= f.label :content, "コメント" %><br>
            <%= f.text_area :content, rows: 5, class: "form-control" %>
          </div>

          <div id="star-rating" data-score="<%= @comment.rating || 0 %>"></div>
            <%= f.hidden_field :rating, id: "rating" %>

          <%= f.submit "投稿", class: "btn btn-success rounded-pill px-4" %>
        <% end %>
      <% end %>

    <!-- いいね -->
      <%# if current_user && like = place.likes.find_by(user_id: current_user.id) %>
            <%#= button_to "いいね解除", public_place_like_path(place, like), method: :delete, class: "btn btn-danger" %>
          <%# else %>
            <%#= button_to "いいね", public_place_likes_path(place), method: :post, class: "btn btn-primary" %>
          <%# end %>

        <!-- ブックマーク -->
        

    <!-- 右カラム -->
    <div class="col-md-6">
      <!-- 写真 -->
      <h3>施設の写真</h3>
      <% if @place.photos.attached? %>
        <div class="carousel slide" id="placePhotos" data-bs-ride="carousel">
          <div class="carousel-inner">
            <% @place.photos.each_with_index do |photo, index| %>
              <div class="carousel-item <%= 'active' if index == 0 %>">
                <%= image_tag photo, class: 'd-block w-100', alt: '施設の写真' %>
              </div>
            <% end %>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#placePhotos" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#placePhotos" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      <% else %>
        <p>写真はありません</p>
      <% end %>

      <!-- 基本情報 -->
      <h3 class="mt-4">施設情報</h3>
      <ul class="list-unstyled">
        <li><strong>カテゴリ:</strong> <%= @place.category.humanize %></li>
        <li><strong>住所:</strong> <%= @place.address %></li>
        <li><strong>授乳室:</strong> <%= @place.nursery ? 'あり' : 'なし' %></li>
        <li><strong>おむつ交換台:</strong> <%= @place.diaper ? 'あり' : 'なし' %></li>
        <li><strong>遊具:</strong> <%= @place.playground ? 'あり' : 'なし' %></li>
        <!-- 他の設備も必要なら追加 -->
      </ul>

      <!-- Googleマップリンク -->
      <div class="mt-3">
        <a href="https://www.google.com/maps?q=<%= @place.latitude %>,<%= @place.longitude %>" class="btn btn-primary" target="_blank">
          Googleマップで見る
        </a>
      </div>
      
      <% if user_signed_in? && current_user == @place.user %>
        <div class="mt-4">
          <%= button_to 'この施設を削除', public_place_path(@place), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  // 投稿用
  document.addEventListener("turbolinks:load", () => {
  const target = document.getElementById("star-rating");

  if (target) {
    const score = parseFloat(target.dataset.score || 0);

    raty(target, {
      number: 5,
      starSize: 24,
      
      starOn: '/assets/raty/star-on.png',
      starOff: '/assets/raty/star-off.png',
      starHalf: '/assets/raty/star-half.png',
      halfShow: true,
      click: (newScore) => {
        const input = document.getElementById("rating");
        if (input) input.value = newScore;
      }
    })
  }
  });
  
  // 表示用
  document.addEventListener("turbolinks:load", () => {
  document.querySelectorAll(".rating").forEach((elem) => {
    const score = parseFloat(elem.dataset.score || 0);

    raty(elem, {
      score: score,
      readOnly: true, // コメント表示は読取専用
      
      starOn: '/assets/raty/star-on.png',
      starOff: '/assets/raty/star-off.png',
      starHalf: '/assets/raty/star-half.png',
      halfShow: true,
    });
  });
});
</script>